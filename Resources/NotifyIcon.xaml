<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:viewmodels="clr-namespace:Light.ViewModels"
                    xmlns:tray="clr-namespace:Light.Views.Tray">

    <viewmodels:ViewModelLocator x:Key="Locator"/>

    <tb:TaskbarIcon x:Key="TaskbarIcon"
                    IconSource="/Resources/Images/Icon1.ico"
                    PopupActivation="RightClick"
                    LeftClickCommand="{Binding ShowMainWindowCommand, Mode=OneWay}"
                    DataContext ="{Binding TrayMenuViewModel, Source={StaticResource Locator}}"
                    ToolTipText="Light">
        <tb:TaskbarIcon.TrayPopup>
            <tray:TrayMenuPopup />
        </tb:TaskbarIcon.TrayPopup>
    </tb:TaskbarIcon>

</ResourceDictionary>