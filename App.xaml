<Application x:Class="Light.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Light"
             xmlns:viewmodels="clr-namespace:Light.ViewModels"         
             xmlns:views="clr-namespace:Light.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type viewmodels:MainWindowViewModel}">
                <views:MainWindowUserControl/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:OtherSettingsPageViewModel}">
                <views:OtherSettingsPageUserControl/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ProcessPageViewModel}">
                <views:ProcesessPageUserControl/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:SettingsMainPageViewModel}">
                <views:SettingsMainPageUserControl/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:SettingsWindowViewModel}">
                <views:SettingsUserControl/>
            </DataTemplate>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
