<UserControl x:Class="Light.Views.Settings.SettingsMainPageUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:Light.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="450"
             d:DataContext="{d:DesignInstance Type={x:Type viewmodels:SettingsMainPageViewModel}}"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="31*" />
            <RowDefinition Height="154*" />
            <RowDefinition Height="155*" />
            <RowDefinition Height="60*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="321*" />
            <ColumnDefinition Width="39*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <GroupBox
            Header="{DynamicResource Loc_Monitors}"
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Grid>
                <ListBox
                    BorderThickness="0"
                    SelectionMode="Single"
                    SelectedIndex="{Binding SelectedScreenIndex, Mode=TwoWay}"
                    ItemsSource="{Binding Screens, Mode=OneWay}"
                    ItemContainerStyle="{StaticResource MonitorListBox}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel 
                                Orientation="Horizontal" HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Width="78" Height="78"
                                Cursor="Hand">
                                <Grid.InputBindings>
                                    <MouseBinding Gesture="LeftDoubleClick"
                                        Command="{Binding DataContext.MonitorDoubleClickCommand, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" />
                                </Grid.InputBindings>
                                <Image
                                    Source="{StaticResource MonitorBlack}"
                                    VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Width="68.2" Height="61.6"
                                    Stretch="Uniform"
                                    Opacity="{Binding Opacity, Mode=OneWay}"
                                    Grid.Row="0">
                                </Image>
                                <TextBox
                                    Text="{Binding Name, Mode=OneWay}"
                                    HorizontalAlignment="Center" VerticalAlignment="Top"
                                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                    Cursor="Hand"
                                    FontSize="12"
                                    Grid.Row="0" 
                                    Height="50" Width="66" 
                                    Margin="0,3,0,0">
                                </TextBox>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </GroupBox>
        <GroupBox
            Header="{DynamicResource Loc_Day}"
            FontSize="14"
            Height="154"
            Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="108*"/>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="48*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="56*" />
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="106*" />
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="17*" />
                        <RowDefinition Height="22*" />
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="22*" />
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="22*" />
                        <RowDefinition Height="6*" />
                    </Grid.RowDefinitions>
                    <Ellipse
                        Fill="Black" Stroke="Black"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Height="4" Width="4"
                        Margin="0,3,0,0"
                        Grid.Column="5" Grid.Row="1" Grid.ColumnSpan="2">
                    </Ellipse>
                    <Ellipse
                        Fill="Black" Stroke="Black"
                        HorizontalAlignment="Left" 
                        Height="4" Width="4"
                        Margin="0,12,0,6"
                        Grid.Column="5" Grid.Row="1" Grid.ColumnSpan="2">
                    </Ellipse>
                    <Image
                        Source="{StaticResource Day}"
                        Width="124" Height="124"
                        Stretch="Fill"
                        Opacity="0.03" 
                        Margin="0,0,0,5"
                        Grid.RowSpan="7" Grid.ColumnSpan="7" Grid.Column="2" >
                    </Image>
                    <TextBox
                        Text="{Binding HourEnd, Converter= {StaticResource HourConverter}, Mode=TwoWay}"
                        MaxLength="2"
                        IsReadOnly="False"
                        Focusable="True"
                        FontSize="20"
                        Cursor="IBeam"
                        Background="Transparent"
                        VerticalContentAlignment="Center" HorizontalContentAlignment="Right"
                        Padding="0,-5,0,0" 
                        Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2">
                    </TextBox>
                    <TextBox
                        Text="{Binding MinEnd, Converter= {StaticResource MinConverter}, Mode=TwoWay}"
                        MaxLength="2"
                        TextWrapping="Wrap"
                        IsReadOnly="False"
                        FontSize="20"
                        Focusable="True"
                        Cursor="IBeam"
                        Background="Transparent"
                        VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                        Padding="0,-5,0,0" 
                        Grid.Column="7" Grid.Row="1">
                    </TextBox>
                    <TextBox
                        BorderThickness="0"
                        IsReadOnly="True"
                        FontSize="12"
                        Background="Transparent"
                        HorizontalContentAlignment="Left"
                        Text="{Binding Value, ElementName=DayTemperatureSlider, Converter={StaticResource TemperatureToKelvin}, Mode=OneWay }"
                        Grid.Row="2" Grid.ColumnSpan="4" Grid.Column="1">
                    </TextBox>
                    <TextBox
                        BorderThickness="0"
                        IsReadOnly="True"
                        FontSize="15"
                        Background="Transparent"
                        Text="{DynamicResource Loc_Sunrise}" 
                        Grid.ColumnSpan="5" Grid.Column="3" 
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center" 
                        Padding="0,-4,0,0">
                    </TextBox>
                    <TextBox
                        BorderThickness="0"
                        IsReadOnly="True"
                        FontSize="12"
                        Background="Transparent"
                        HorizontalContentAlignment="Left"
                        Text="{Binding Value, ElementName=DayBrightnessSlider, Converter={StaticResource BrightnessToPercent}, Mode=OneWay }"
                        Grid.Row="4" Grid.ColumnSpan="3" Grid.Column="1">
                    </TextBox>
                    <Slider
                        x:Name="DayTemperatureSlider"
                        Style="{StaticResource HorizontalSlider}"
                        Maximum="12000" Minimum="{Binding MinGammaRange}"
                        TickFrequency="100"
                        IsSnapToTickEnabled="True"
                        Cursor="Hand"
                        IsDirectionReversed="True"
                        Value="{Binding DayColorTemperature, Mode=TwoWay}"
                        Grid.Row="3" Grid.ColumnSpan="9" Grid.Column="1">
                    </Slider>
                    <Slider
                        x:Name="DayBrightnessSlider"
                        Style="{StaticResource HorizontalSlider}"
                        Maximum="100" Minimum="{Binding MinBrightnessRange}"
                        Cursor="Hand"
                        IsDirectionReversed="True"
                        Value="{Binding DayBrightness, Converter= {StaticResource BrightnessToDouble}, Mode=TwoWay}"
                        Grid.Row="5" Grid.ColumnSpan="9" Grid.Column="1">
                    </Slider>
                </Grid>
            </StackPanel>
        </GroupBox>
        <GroupBox
            Header="{DynamicResource Loc_Night}"
            Grid.Row="4"
            FontSize="14"
            Grid.ColumnSpan="2" Grid.Column="1">
            <StackPanel>
                <Grid Height="129">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="108*"/>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="48*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="56*" />
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="106*" />
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="17*" />
                        <RowDefinition Height="22*" />
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="22*" />
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="23*" />
                        <RowDefinition Height="5*" />
                    </Grid.RowDefinitions>
                    <Ellipse
                        Fill="Black" Stroke="Black"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Height="4" Width="4"
                        Margin="0,3,0,0"
                        Grid.Column="5" Grid.Row="1" Grid.ColumnSpan="2">
                    </Ellipse>
                    <Ellipse
                        Fill="Black" Stroke="Black"
                        HorizontalAlignment="Left" 
                        Height="4" Width="4"
                        Margin="0,12,0,6"
                        Grid.Column="5" Grid.Row="1" Grid.ColumnSpan="2">
                    </Ellipse>
                    <Image
                        Source="{StaticResource Night}"
                        Width="124" Height="124"
                        Stretch="Fill"
                        Opacity="0.03" 
                        Grid.RowSpan="6" Grid.ColumnSpan="7" Grid.Column="2">
                    </Image>
                    <TextBox
                        Text="{Binding HourStart, Converter= {StaticResource HourConverter}, Mode=TwoWay}"
                        MaxLength="2"
                        IsReadOnly="False"
                        Focusable="True"
                        FontSize="20"
                        Cursor="IBeam"
                        Background="Transparent"
                        VerticalContentAlignment="Center" HorizontalContentAlignment="Right"
                        Padding="0,-5,0,0" 
                        Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2">
                    </TextBox>
                    <TextBox
                        Text="{Binding MinStart, Converter= {StaticResource MinConverter}, Mode=TwoWay}"
                        MaxLength="2"
                        TextWrapping="Wrap"
                        IsReadOnly="False"
                        FontSize="20"
                        Focusable="True"
                        Cursor="IBeam"
                        Background="Transparent"
                        VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                        Padding="0,-5,0,0" 
                        Grid.Column="7" Grid.Row="1">
                    </TextBox>
                    <TextBox
                        BorderThickness="0"
                        IsReadOnly="True"
                        FontSize="12"
                        Background="Transparent"
                        HorizontalContentAlignment="Left"
                        Text="{Binding Value, ElementName=NightTemperatureSlider, Converter={StaticResource TemperatureToKelvin} , Mode=OneWay }"
                        Grid.Row="2" Grid.ColumnSpan="4" Grid.Column="1">
                    </TextBox>
                    <TextBox
                        BorderThickness="0"
                        IsReadOnly="True"
                        FontSize="15"
                        Background="Transparent"
                        Text="{DynamicResource Loc_Sunset}" 
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                        Padding="0,-4,0,0"
                        Grid.ColumnSpan="5" Grid.Column="3">
                    </TextBox>
                    <TextBox
                        BorderThickness="0"
                        IsReadOnly="True"
                        FontSize="12"
                        Background="Transparent"
                        HorizontalContentAlignment="Left"
                        Text="{Binding Value, ElementName=NightBrightnessSlider, Converter={StaticResource BrightnessToPercent}, Mode=OneWay }"
                        Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="1">
                    </TextBox>
                    <Slider
                        x:Name="NightTemperatureSlider"
                        Style="{StaticResource HorizontalSlider}"
                        Maximum="12000" Minimum="{Binding MinGammaRange}"
                        TickFrequency="100"
                        IsSnapToTickEnabled="True"
                        Cursor="Hand"
                        IsDirectionReversed="True"
                        Value="{Binding NightColorTemperature, Mode=TwoWay}"
                        Grid.Row="3" Grid.ColumnSpan="9" Grid.Column="1">
                    </Slider>
                    <Slider
                        x:Name="NightBrightnessSlider"
                        Style="{StaticResource HorizontalSlider}"
                        Maximum="100" Minimum="{Binding MinBrightnessRange}"
                        Cursor="Hand"
                        IsDirectionReversed="True"
                        Value="{Binding NightBrightness, Converter= {StaticResource BrightnessToDouble} ,Mode=TwoWay}"
                        Grid.Row="5" Grid.ColumnSpan="9" Grid.Column="1">
                    </Slider>
                </Grid>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>