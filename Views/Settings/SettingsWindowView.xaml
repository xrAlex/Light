<Window x:Class="Light.Views.Settings.SettingsWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Light.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="500" Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        Background="White">
    <Window.DataContext>
        <viewmodels:SettingsWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="174*" />
            <RowDefinition Height="46*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="26*" />
            <RowDefinition Height="29*" />
            <RowDefinition Height="45*" />
            <RowDefinition Height="116*" />
            <RowDefinition Height="40*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="16*" />
            <ColumnDefinition Width="11*" />
            <ColumnDefinition Width="16*" />
            <ColumnDefinition Width="11*" />
            <ColumnDefinition Width="16*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <ContentControl
            Content="{Binding SelectedViewModel}" Grid.ColumnSpan="10" Grid.RowSpan="9" />
        <Rectangle
            Fill="{StaticResource  Black}"
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Height="500" Width="60" Grid.RowSpan="9" Grid.ColumnSpan="3" />
        <Button
            Style="{StaticResource BlackButton}"
            Grid.Column="1" Grid.RowSpan="2" Grid.Row="3"
            Command="{Binding ToProcessPageCommand}">
            <Image
                Width="37" Height="37"
                Source="{StaticResource Process}" Stretch="Fill" />
        </Button>
        <Button
            Style="{StaticResource BlackButton}"
            Command="{Binding ToSettingsMainPageCommand}" Grid.Column="1" Grid.Row="1">
            <Image
                Width="37" Height="37"
                Source="{StaticResource Main}" Stretch="Fill" />
        </Button>
        <Button
            Style="{StaticResource BlackButton}"
            Grid.Column="1"
            Command="{Binding ToOtherSettingsPageCommand}" Height="45" VerticalAlignment="Top" Grid.Row="5">
            <Image
                Width="37" Height="37"
                Source="{StaticResource Other}" Stretch="Fill" />
        </Button>
        <Button
            Style="{StaticResource LightGrayButton}"
            Content="Сбросить"
            Command="{Binding ResetSettingsCommand}"
            Grid.Row="7" Grid.Column="4" />
        <Button
            Style="{StaticResource LightGrayButton}"
            Content="Отменить"
            Command="{Binding CloseSettingsCommand}"
            Grid.Row="7" Grid.Column="6" />
        <Button
            Style="{StaticResource LightGrayButton}"
            Content="Применить"
            Command="{Binding ApplySettingsCommand}"
            Grid.Row="7" Grid.Column="8" />
    </Grid>
</Window>