<Window x:Class="Light.Views.Tray.TrayMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:Light.ViewModels"
        xmlns:tray="clr-namespace:Light.Views.Tray"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="TrayMenu" 
        Topmost="True"
        Background="White"
        Height="75" Width="100">
    <Window.DataContext>
        <viewModels:TrayMenuViewModel/>
    </Window.DataContext>
    <Grid>
        <tb:TaskbarIcon
            IconSource="/Resources/Images/Icon1.ico"
            PopupActivation="RightClick"
            LeftClickCommand="{Binding ShowMainWindow}"
            ToolTipText="Light">
            <tb:TaskbarIcon.TrayPopup>
                <tray:TrayMenuUserControl />
            </tb:TaskbarIcon.TrayPopup>
        </tb:TaskbarIcon>
</Grid>
</Window>